<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".signup"
    tools:ignore="ExtraText">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar1"
        android:layout_alignParentBottom="true"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/gambar2"
        android:layout_alignParentRight="true"
        android:id="@+id/img_1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-51dp"
        android:fontFamily="@font/poppinssemibold"
        android:text="SIGN UP"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:id="@+id/txt_1"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:width="327dp"
        android:background="@drawable/textfield"
        android:fontFamily="@font/poppinsregular"
        android:hint="  NIK"
        android:minHeight="55dp"
        android:textColorHint="@color/white"
        android:id="@+id/jtxt_nik"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/jtxt_nik"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true"
        android:width="327dp"
        android:minHeight="55dp"
        android:background="@drawable/textfield"
        android:hint=" NAMA LENGKAP"
        android:textColorHint="@color/white"
        android:id="@+id/jtxt_nama"/>
    <EditText
        android:id="@+id/jtxt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jtxt_nama"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true"
        android:width="327dp"
        android:height="55dp"
        android:background="@drawable/textfield"
        android:hint=" TANGGAL LAHIR"
        android:textColorHint="@color/white"/>
    <EditText
        android:id="@+id/jtxt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jtxt_date"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true"
        android:width="327dp"
        android:height="55dp"
        android:background="@drawable/textfield"
        android:hint=" ADDRESS"
        android:textColorHint="@color/white"/>
    <EditText
        android:id="@+id/jtxt_nomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jtxt_address"
        android:layout_marginTop="11dp"
        android:layout_centerHorizontal="true"
        android:width="327dp"
        android:height="55dp"
        android:background="@drawable/textfield"
        android:hint=" NOMOR "
        android:textColorHint="@color/white"/>


</RelativeLayout>